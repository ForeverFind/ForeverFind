#!/bin/bash


# Initialize git if not already initialized
if [ ! -d ".git" ]; then
  git init
  echo "Initialized empty Git repository."
else
  echo "Git repository already initialized."
fi

# Add all files and commit
git add .
git commit -m "Initial commit - ForeverFind wedding vendor app"

# Add remote origin
git remote add origin https://github.com/$GITHUB_ForeverFind/$REPO_NAME.git

# Set main branch and push
git branch -M main
git push -u origin main

echo "Done! Your code is pushed to https://github.com/$GITHUB_ForeverFind/$REPO_NAME"
git remote -v

const handleChatSubmit = async () => {
  if (!chatInput.trim()) return; // ignore empty questions

  try {
    const res = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${process.env.OPENAI_API_KEY}`, // Make sure you set this key!
      },
      body: JSON.stringify({
        model: "gpt-3.5-turbo",
        messages: [
          { role: "system", content: "You are a helpful wedding planning assistant." },
          { role: "user", content: chatInput }
        ],
      }),
    });

    if (!res.ok) {
      throw new Error(`OpenAI API error: ${res.status} ${res.statusText}`);
    }

    const data = await res.json();
    setChatResponse(data.choices[0]?.message?.content || "No response received.");
  } catch (error) {
    setChatResponse("Sorry, there was a problem connecting to the AI service.");
    console.error(error);
  }

  setChatInput("");
};

# STEP 1: Initialize a Git repo (if you haven’t)
git init

# STEP 2: Add all your code
git add .

# STEP 3: Save your first commit
git commit -m "Initial commit of VowAI wedding app"

# STEP 4: Create a new repo on GitHub (you’ll do this manually in browser)

# Visit https://github.com/new
# Name it: vowai-app or foreverfind-app
# DON'T initialize with README (you already have files)

# STEP 5: Copy the repo URL GitHub gives you, e.g.
# https://github.com/yourusername/vowai-app.git

# STEP 6: Paste it here to connect your local repo
git remote add origin https://github.com/yourusername/vowai-app.git

# STEP 7: Push it to GitHub!
git push -u origin main
